{{>layout/header}}
<div class="container">
    <div class="col-md-12">
        <div class="col-md-4">
            <form action="/api/v1/blog" method="post">
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요.">
                </div>
                {{#userid}}
                    <div class="form-group">
                        <label for="hikderid">닉네임</label>
                        <input type="text" class="form-control" id="userid" value="{{userid}}" readonly>
                    </div>
                {{/userid}}

                <div class="form-group">
                    <label for="pmntnsn">산이름</label>
                    <input type="text" class="form-control" id="pmntnsn" placeholder="산이름을 입력하세요.">
                </div>

                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea id="content" class="form-control" placeholder="내용을 입력하세요."></textarea>
                </div>
                <div class="form-group">
                    {{#userid}}
                    <a href="/blog/{{userid}}" role="button" class="btn btn-secondary">취소</a>
                    {{/userid}}
                    <button id="btn-save" class="btn btn-primary" type="button">등록</button>
                </div>

            </form>
        </div>
    </div>
</div>
<script src="/js/app/blog.js"></script>
{{>layout/footer}}
