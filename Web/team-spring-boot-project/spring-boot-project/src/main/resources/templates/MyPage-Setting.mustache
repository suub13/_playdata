{{>layout/header}}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
<div class="container">
    <div class="row">
        {{>layout/mypage-menu}}
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <form>
                            <div class="form-group">
                                <label for="screen">화면 설정</label>
                                <select class="form-control" id="screen">
                                    <option>밝기</option>
                                    <option>해상도</option>
                                    <option>테마</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="language">언어 설정</label>
                                <select class="form-control" id="language">
                                    <option>한국어</option>
                                    <option>영어</option>
                                    <option>일본어</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="screen">해상도 설정</label>
                                <select class="form-control" id="screen">
                                    <option>밝음</option>
                                    <option>중간</option>
                                    <option>어두움</option>
                                </select>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="hide-info">
                                <label class="form-check-label" for="hide-info">정보 숨김</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="remember-id">
                                <label class="form-check-label" for="remember-id">정보 기억</label>
                            </div>
                            <button type="submit" class="btn btn-primary" onclick="/MyPage/Setting">저장</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/app/register.js"></script>
{{>layout/footer}}